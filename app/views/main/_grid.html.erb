	<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN">
	<html>
		<head>
			<title></title>
		</head>
		<body>
			<div id="product-list">
				<hr>
				<table class="table">
					<tr>
						<th>
							ID
						</th>
						<th>
							Requester
						</th>
						<th>
							Assignee
						</th>
						<th>
							Priority
						</th>
						<th>
							Device
						</th>
						<th>
							Test Point
						</th>
						<th>
							Platform
						</th>
						<th>
							Taskname
						</th>
						<th>
							Sch Comp Date
						</th>
						<th>
							Duration
						</th>
						<th>
							Category
						</th>
					</tr><% @tasks.each do |task| %><%if @supress_overdue_color %>
					<tr class="<%= cycle('list-line-odd','list-line-even')%>">
						<%else %><%if(task.scd) %><%if (task.scd >= @today) %>
					</tr>
					<tr class="<%= cycle('list-line-odd','list-line-even')%>">
						<%else %>
					</tr>
					<tr class="<%= cycle('list-line-odd_past_due','list-line-even_past_due')%>">
						<%end %><%end %><%end %>
						<td>
							<%= link_to task.id,task, :class =>'btn btn-info btn-custom'%>
						</td>
						<td>
							<%= task.requester.fullname %>
						</td>
						<td>
							<%= task.assignee ? task.assignee.fullname : "UNASSIGNED" %>
						</td>
						<td>
							<%= task.priority %>
						</td>
						<td><%= task.device %></td>
						<td><%= task.operation %></td>
						<td><%= task.platform %></td>
						<td>
							<%= task.taskname %>
						</td>
						<td>
							<%= task.scd %>
						</td>
						<td>
							<%= task.duration %>
						</td>						<td>
							<%= task.category %>
						</td>
					</tr><% end %>
				</table>
				<hr>
			</div>
		</body>
	</html>
