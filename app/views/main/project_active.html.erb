
<div class="page-header">
  <h1>Active Projects <small>ordered by assignee and priority</small></h1>
</div>
		<div id="accordion">
			<% @tasks.each_pair do |assignee_id, tasks| %>
			<% u = User.find(assignee_id.to_i)%>
			<h3><a href="#"><%= u.fullname %></a></h3>
			<div>
				<table class="bordered-table">
				<%= render :partial => "task_header"%>
				<%= render :partial => "task" , :collection => tasks, :locals => {:assignee_id => assignee_id}%>
				</table>	
				</div>
			<% end %>
			
			</div>
