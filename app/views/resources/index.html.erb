<h1>Listing resources</h1>

<table class="table">
  <tr>
    <th>Date</th>
    <th>Department</th>
    <th>Name</th>
    <th>Project</th>
    <th>Function</th>
    <th>Actual</th>
    <th>Forecast</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.date %></td>
    <td><%= resource.department %></td>
    <td><%= resource.name %></td>
    <td><%= resource.project %></td>
    <td><%= resource.function %></td>
    <td><%= resource.actual %></td>
    <td><%= resource.forecast %></td>
    <td><%= link_to 'Show', resource %></td>
    <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td><%= link_to 'Destroy', resource, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

