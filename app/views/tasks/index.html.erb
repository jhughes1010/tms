<h1>Listing tasks</h1>
<table class="table table-hover">
    <tr>
        <th>
            ID
        </th>
        <th>
            Requester
        </th>
        <th>
            Assignee
        </th>
        <th>
            Complete
        </th>
        <th>
            Accepted
        </th>
        <th>
            Family
        </th>
        <th>
            Device
        </th>
        <th>
            Request Type
        </th>
        <th>
            Taskname
        </th>
        <th>
            Target CD
        </th>
        <th>
            Sch CD
        </th>
        <th>
            Actual CD
        </th>
        <th>
            Priority
        </th>
        <th>
            Category
        </th>
        <th>
            Duration
        </th>
        <th>
        </th>
        <th>
        </th>
        <th>
        </th>
    </tr>
    <% @tasks.each do |task| %>
    <tr>
        <td>
            <%= task.id %>
        </td>        
		<td>
            <%= task.requester.fullname %>
        </td>
        <td>
            <%= task.assignee ? task.assignee.fullname : "UNASSIGNED" %>
        </td>
        <td>
            <%= task.complete %>
        </td>
        <td>
            <%= task.accepted %>
        </td>
        <td>
            <%= task.family %>
        </td>
        <td>
            <%= task.device %>
        </td>
        <td>
            <%= task.request_type %>
        </td>
        <td>
            <%= task.taskname %>
        </td>
        <td>
            <%= task.tcd %>
        </td>
        <td>
            <%= task.scd %>
        </td>
        <td>
            <%= task.acd %>
        </td>
        <td>
            <%= task.priority %>
        </td>
        <td>
            <%= task.category %>
        </td>
        <td>
            <%= task.duration %>
        </td>
	    <td><%= link_to 'Show', task,:class =>'btn btn-info' %></td>
	    <td><%= link_to 'Edit', edit_pto_path(task),:class =>'btn btn-warning' %></td>
	    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete,:class =>'btn btn-danger' %></td>

    </tr>
    <% end %>
</table>
<br/>
<%= link_to 'New Task', new_task_path %>
<p>
    <a href="/main/index">TMS Home</a>
</p>
